{
  "verbose": true,
  "rootDir": "../../",
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "lib/**/*.js"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": [
    "html",
    "text-summary"
  ],
  "modulePaths": [
    "<rootDir>/lib/"
  ]
}
